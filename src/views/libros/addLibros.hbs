<div class="row py-5">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header text-center fw-bolder"><h3>New Libro</h3></div>
            <div class="card-body">
                <form action="/libros/add" method="POST">
                    <div class="form-group">
                        <label>Codigo</label>
                        <input type="text" name="codLibro" maxlength="3" class="form-control" placeholder="Codigo">
                    </div>
                    <div class="form-group">
                        <label>Titulo</label>
                        <input type="text" name="titulo" class="form-control" placeholder="Titulo">
                    </div>
                    <div class="form-group">
                        <label>Editorial</label>
                        <select name="editorial" class="form-control text-black">
                            {{#each editorial}}
                                <option value="{{codEditorial}}">{{editorial}}</option>
                            {{/each }}
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Autor</label>
                        <select name="autor"  class="form-control text-black">
                            {{#each autores}}
                                <option value="{{codAutor}}">{{nombres}}</option>
                            {{/each }}
                        </select>
                        {{!-- <input type="text" name="autor" value="{{titulo}}" class="form-control" placeholder="Autor"> --}}
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Agregar</button>
                    </div>
                </form>
            </div>            
        </div>
    </div>
</div>