<div class="row py-5">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header text-center fw-bolder"><h3>New Autor</h3></div>
            <div class="card-body">
                <form action="/autores/add" method="POST">
                    <div class="form-group">
                        <label>Codigo</label>
                        <input type="text" name="codAutor" class="form-control" placeholder="Codigo">
                    </div>
                    <div class="form-group">
                        <label>Apellidos</label>
                        <input type="text" name="apellidos" class="form-control" placeholder="Apellidos">
                    </div>
                    <div class="form-group">
                        <label>Nombres</label>
                        <input type="text" name="nombres" class="form-control" placeholder="Nombres">
                    </div>
                    <div class="form-group">
                        <label>Pais</label>
                        <input type="text" name="pais" class="form-control" placeholder="Pais">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Agregar</button>
                    </div>
                </form>
            </div>            
        </div>
    </div>
</div>