<div class="row py-5">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header text-center fw-bolder"><h3>Editorial: {{editorial.editorial}}</h3></div>
            <div class="card-body">
                <form action="/editoriales/update/{{editorial._id}}?_method=PUT" method="POST">
                    <input type="hidden" name="_method" value="PUT">
                    <div class="form-group">
                        <label>Codigo</label>
                        <input type="text" name="codEditorial" class="form-control" value="{{editorial.codEditorial}}" placeholder="Codigo">
                    </div>
                    <div class="form-group">
                        <label>Editorial</label>
                        <input type="text" name="editorial" class="form-control" value="{{editorial.editorial}}" placeholder="Apellidos">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Actualizar Editorial</button>
                    </div>
                </form>
            </div>            
        </div>
    </div>
</div>