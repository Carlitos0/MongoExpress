<div class="col-md-4 mx-auto my-5">
    <div class="card">
        <div class="card-header d-flex justify-content-center"><img src="img/user.png" class="img-fluid w-25" alt=""></div>
        <div class="card-body">
            <form action="/login" method="POST">
                <div class="form-group">
                    <input type="text" name="login" placeholder="Username" class="form-control">
                </div>
                <div class="form-group">
                    <input type="password" name="password" placeholder="password" class="form-control">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-info btn-block">Ingresar</button>
                </div>
                <a href="/register" class="">Registrate aqui!</a>
            </form>
        </div>
    </div>
</div>