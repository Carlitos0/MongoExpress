<div class="row py-5">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header text-center fw-bolder"><h3>User: {{user.login}}</h3></div>
            <div class="card-body">
                <form action="/usuarios/update/{{user._id}}?_method=PUT" method="POST">
                    <input type="hidden" name="_method" value="PUT">
                    <div class="form-group">
                        <label>Codigo</label>
                        <input type="text" name="codUser" maxlength="3" class="form-control" value="{{user.codUser}}" placeholder="Codigo">
                    </div>
                    <div class="form-group">
                        <label>User name</label>
                        <input type="text" name="login" class="form-control" value="{{user.login}}" placeholder="Apellidos">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="text" name="password" class="form-control" value="{{user.password}}" placeholder="Apellidos">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Actualizar Usuario</button>
                    </div>
                </form>
            </div>            
        </div>
    </div>
</div>